<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/singlerowhomeImage"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:src="@drawable/symptomchecker" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/singlerowhomeImage"
        android:layout_alignLeft="@+id/singlerowhomeImage"
        android:layout_alignRight="@+id/singlerowhomeImage"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symtom Checker"
            android:textSize="17sp"
            android:layout_margin="2dp"
            android:id="@+id/imageTextHomeFirst"
            android:textColor="#ffffff"/>

    </LinearLayout>

</RelativeLayout>